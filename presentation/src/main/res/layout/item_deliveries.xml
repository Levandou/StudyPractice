<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="150dp">

    <TextView
        android:id="@+id/name_of_product_del"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto_regular"
        android:text="Молочные"
        android:gravity="center_horizontal"
        android:textColor="@color/black"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/ordered"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto_regular"
        android:text="22"
        android:textSize="30sp"
        app:layout_constraintTop_toBottomOf="@id/name_of_product_del"
        app:layout_constraintStart_toEndOf="@id/ordered_text"/>

    <TextView
        android:id="@+id/ordered_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto_regular"
        android:text="Заказано: "
        android:textSize="30sp"
        app:layout_constraintTop_toBottomOf="@id/name_of_product_del"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/keeping"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto_regular"
        android:text="0"
        android:textSize="30sp"
        app:layout_constraintTop_toBottomOf="@id/ordered"
        app:layout_constraintStart_toEndOf="@id/keeping_text"/>

    <TextView
        android:id="@+id/keeping_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto_regular"
        android:text="Хранение: "
        android:textSize="30sp"
        app:layout_constraintTop_toBottomOf="@id/ordered_text"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>